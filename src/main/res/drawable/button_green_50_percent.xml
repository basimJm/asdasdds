<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#80009F4D"></stroke>
            <gradient android:angle="-90" android:startColor="#80009F4D" android:endColor="#80009F4D"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#80009F4D"/>
            <solid android:color="#80009F4D"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#80009F4D" />
            <gradient android:angle="-90" android:startColor="#80009F4D" android:endColor="#80009F4D" />
        </shape>
    </item>
</selector>