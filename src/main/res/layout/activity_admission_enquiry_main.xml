<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activities.TeacherHomeScreen" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Admission Enquiry"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />
    </LinearLayout>

    <com.schoofi.utils.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/edit_userFullName"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:hint="Name"
        android:textColor="@android:color/black"

        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@+id/headerLayout"
        android:textSize="15sp"/>

    <com.schoofi.utils.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/edit_userName"
        android:hint="User Name"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:textColor="@android:color/black"
        android:imeOptions="actionNext"
        android:singleLine="true"

        android:layout_below="@+id/edit_userFullName"
        android:textSize="15sp"/>

    <com.schoofi.utils.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/edit_password"
        android:hint="Password"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:textColor="@android:color/black"

        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_below="@+id/edit_userName"
        android:textSize="15sp"/>

    <com.schoofi.utils.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/edit_confirmPassword"
        android:hint="Confirm Password"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:textColor="@android:color/black"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textPassword"

        android:layout_below="@+id/edit_password"
        android:textSize="15sp"/>

    <com.schoofi.utils.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/edit_email"
        android:hint="Email"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:textColor="@android:color/black"
        android:imeOptions="actionNext"
        android:singleLine="true"

        android:layout_below="@+id/edit_confirmPassword"
        android:textSize="15sp"/>

    <com.schoofi.utils.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/edit_phone"
        android:hint="Mobile"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:textColor="@android:color/black"
        android:imeOptions="actionDone"
        android:singleLine="true"

        android:layout_below="@+id/edit_email"
        android:textSize="15sp"/>

    <com.schoofi.utils.CustomButton
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/buttons"
        android:id="@+id/btn_register"
        android:layout_alignParentBottom="true"
        android:text="Register"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"/>

</RelativeLayout>
