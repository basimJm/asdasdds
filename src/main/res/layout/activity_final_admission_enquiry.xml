<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activities.TeacherHomeScreen" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Admission Enquiry"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />
    </LinearLayout>

    <com.schoofi.utils.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:id="@+id/text_status"
        android:layout_below="@+id/headerLayout"
        android:layout_margin="10dp"/>

    <com.schoofi.utils.CustomButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/green_tick"
        android:id="@+id/btn_option1"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/text_status"/>

    <com.schoofi.utils.CustomButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/green_tick"
        android:id="@+id/btn_option2"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/btn_option1"/>

    <com.schoofi.utils.CustomButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/green_tick"
        android:id="@+id/btn_option3"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/btn_option2"/>

    <com.schoofi.utils.CustomButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/green_tick"
        android:id="@+id/btn_option4"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/btn_option3"/>

</RelativeLayout>
