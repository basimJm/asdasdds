<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">



    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_teacherLeaveDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Diary"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/img_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.4"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="Reply"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/hy"
        android:weightSum="4"
        android:layout_below="@+id/headerLayout"
        android:background="@color/white">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:background="@color/white">


    <ImageView
        android:id="@+id/text_drawable"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical|center_horizontal"

        android:padding="20dp"
        android:src="@drawable/person" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/white">

        <com.schoofi.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"

            android:textStyle="bold"
            android:layout_margin="5dp"

            android:id="@+id/text_title"/>

        <com.schoofi.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="ddd"

            android:id="@+id/text_created_date"/>

        <com.schoofi.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="ddd"
            android:id="@+id/text_rating_parameterId"
            />



        <RatingBar
            android:layout_width="wrap_content"
            android:theme="@style/RatingBar1"
            android:rating="5"
            android:stepSize="0.5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:numStars="5"
            style="?android:attr/ratingBarStyleIndicator"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"

            android:id="@+id/ratingBar"
            android:isIndicator="true"
            android:layout_gravity="left"

            android:layout_height="wrap_content"/>

        <com.schoofi.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:textStyle="normal"
            android:layout_margin="5dp"
            android:text="fhjbdhbjfdbhfhbhbjbdsf"

            android:id="@+id/text_description"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_studentAttendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="0.5"
        android:padding="20dp"
        android:visibility="gone"
        android:src="@drawable/person" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_below="@+id/hy"
        android:id="@+id/yu"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:background="@color/white">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"

            android:layout_weight="1"
            android:scaleType="fitXY"
            android:id="@+id/imageView_1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"

            android:layout_weight="1"
            android:scaleType="fitXY"
            android:id="@+id/imageView_2"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="100dp"

            android:layout_weight="1"
            android:id="@+id/frame_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/imagenotavailble"
                android:scaleType="fitXY"
                android:id="@+id/imageView_3"/>

            <ImageView
                android:layout_width = "match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:id="@+id/event_image1"
                android:src="@drawable/transparentupdate"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.schoofi.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Date"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:id="@+id/text_numberDate"/>

            </RelativeLayout>

        </FrameLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_below="@+id/yu">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/list_reply"
            android:divider="@drawable/divider"
            android:dividerHeight="2dp"
            android:scrollbars="none"></ListView>

    </LinearLayout>



</RelativeLayout>
