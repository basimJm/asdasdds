<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activitiess.StudentAnnouncement" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout"
        android:orientation="vertical" >

        <com.schoofi.utils.CustomButton
            android:id="@+id/btn_aboutUs"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="-4.5dp"
            android:layout_marginRight="-4.5dp"
            android:layout_marginTop="-5dp"
            android:drawableRight="@drawable/ic_action_next_item"
            android:gravity="left"
            android:padding="10dp"
            android:text="About Schoofi"
             android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/divider"/>

        <com.schoofi.utils.CustomButton
            android:id="@+id/btn_termsAndConditions"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="-4.5dp"
            android:layout_marginRight="-4.5dp"
            android:layout_marginTop="-5dp"
            android:drawableRight="@drawable/ic_action_next_item"
            android:gravity="left"
            android:padding="10dp"
            android:text="Terms And Conditions"
             android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/divider"/>

        <com.schoofi.utils.CustomButton
            android:id="@+id/btn_privacyPolicy"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="-4.5dp"
            android:layout_marginRight="-4.5dp"
            android:layout_marginTop="-5dp"
            android:drawableRight="@drawable/ic_action_next_item"
            android:gravity="left"
            android:padding="10dp"
            android:text="Privacy Policy"
            android:textAlignment="textStart"
             android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/divider"/>
    </LinearLayout>

</RelativeLayout>