<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_teacherLeaveDetails0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Details"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />
        
        <ImageView
            android:id="@+id/img_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.1"
            android:background="@drawable/rotation"
            android:gravity="center"
            />
    </LinearLayout>
    
   
    <com.schoofi.utils.CustomButton 
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:background="@drawable/buttongreen"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:text="Rotate"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_below="@+id/headerLayout"
        android:id="@+id/btn_rotate"
        />
    
    <com.schoofi.utils.TouchImageView
        android:id="@+id/teacherLeaveImage"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_below="@+id/btn_rotate" />

</RelativeLayout>
