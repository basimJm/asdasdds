<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.schoofi.utils.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/text_subject_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textStyle="normal"/>



        <com.schoofi.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:id="@+id/text_title"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:textStyle="bold"/>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:layout_gravity="left"></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:weightSum="1"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.3"
                android:id="@+id/attatchment4"
                android:layout_gravity="end"
                android:visibility="gone"
                android:tint="@color/gray"/>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.3"
                android:id="@+id/attatchment"
                android:layout_gravity="end"
                android:tint="@color/gray"
                android:src="@drawable/ic_action_attachment"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.3"
                android:id="@+id/attatchment1"
                android:layout_marginLeft="5dp"
                android:layout_gravity="end"
                android:tint="@color/gray"
                android:src="@drawable/ic_action_attachment"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.3"
                android:id="@+id/attatchment5"
                android:layout_marginLeft="5dp"
                android:layout_gravity="end"
                android:visibility="gone"
                android:tint="@color/gray"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.3"
                android:id="@+id/attatchment2"
                android:layout_marginLeft="5dp"
                android:layout_gravity="end"
                android:tint="@color/gray"
                android:src="@drawable/ic_action_attachment"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>