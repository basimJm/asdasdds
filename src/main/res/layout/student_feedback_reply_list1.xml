<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.schoofi.utils.CustomTextView
        android:id="@+id/text_replyStudentFeedbackTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="hhhhh"
        android:textColor="#EE4739"
        android:textSize="15sp" />

    <com.schoofi.utils.CustomTextView
        android:id="@+id/text_replyStudentFeedbackDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="hhhhh"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <com.schoofi.utils.CustomTextView
        android:id="@+id/text_replyStudentTargetDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="hhhhh"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <com.schoofi.utils.CustomTextView
        android:id="@+id/text_replyStudentAssignedName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="hhhhh"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <com.schoofi.utils.CustomTextView
            android:id="@+id/text_replyStudentFeedbackDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.8"
            android:text="hhhhh"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image_feedback_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:src="@drawable/camera" />
    </LinearLayout>

</LinearLayout>