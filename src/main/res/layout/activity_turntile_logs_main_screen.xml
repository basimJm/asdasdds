<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activitiess.StudentExamSchedule"
    android:descendantFocusability="blocksDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_action_back"
            android:gravity="center"
            android:scaleType="fitXY" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Logs"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/headerLayout">

        <smtchahal.materialspinner.MaterialSpinner
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/grey_button"
            android:id="@+id/spinner_zone"
            app:ms_hint="Select Zone"
            android:gravity="center"
            app:ms_hintColor="@color/black"
            app:ms_baseColor="@color/black"
            app:ms_arrowColor="@color/black"
            app:ms_enableFloatingLabel="false"
            android:layout_margin="10dp"
            app:ms_enableErrorLabel="false"
            app:ms_arrowSize="10dp"
            app:ms_multiline="false"
            android:padding="0dp"
            app:ms_floatingLabelText=""
            app:ms_thickness="0dp"
            ></smtchahal.materialspinner.MaterialSpinner>


        <smtchahal.materialspinner.MaterialSpinner
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/grey_button"
            android:id="@+id/spinner_category"
            app:ms_hint="Select Category"
            android:gravity="center"
            app:ms_hintColor="@color/black"
            app:ms_baseColor="@color/black"
            app:ms_arrowColor="@color/black"
            app:ms_enableFloatingLabel="false"
            android:layout_margin="10dp"
            app:ms_enableErrorLabel="false"
            app:ms_arrowSize="10dp"
            app:ms_multiline="false"
            android:padding="0dp"
            app:ms_floatingLabelText=""
            app:ms_thickness="0dp"
            ></smtchahal.materialspinner.MaterialSpinner>

        <com.schoofi.utils.CustomButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button"
            android:text="From Date"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:id="@+id/btn_from"/>

        <com.schoofi.utils.CustomButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button"
            android:text="To Date"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:id="@+id/btn_to"/>


        <com.schoofi.utils.CustomButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buttons"
            android:text="Next"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:id="@+id/btn_next"/>


    </LinearLayout>

    </RelativeLayout>