<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back"/>

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_newLeave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Details"
            android:textColor="#D7D7D7"
            android:textSize="40sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/headerLayout"
        android:layout_above="@+id/btn_next">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/image_view_visitor"/>

            <com.schoofi.utils.CustomTextView
                android:id="@+id/text_visitor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="25sp" />





            <com.schoofi.utils.CustomTextView
                android:id="@+id/text_visitor_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="25sp" />

            <com.schoofi.utils.CustomTextView
                android:id="@+id/text_visitor_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="25sp" />

            <com.schoofi.utils.CustomTextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="25sp" />

            <com.schoofi.utils.CustomTextView
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="25sp" />

            <com.schoofi.utils.CustomTextView
                android:id="@+id/text_studentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="25sp" />



            <com.schoofi.utils.CustomTextView
                android:id="@+id/text_person_to_meet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="25sp" />



            <com.schoofi.utils.CustomTextView
                android:id="@+id/text_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="25sp" />



            <com.schoofi.utils.CustomTextView
                android:id="@+id/text_card_id_issued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="25sp" />










        </LinearLayout>

    </ScrollView>



</RelativeLayout>