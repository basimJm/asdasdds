<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activities.TeacherHomeScreen" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back"/>

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Details"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />
    </LinearLayout>

    <com.schoofi.utils.CustomTextView
        android:id="@+id/textScreenTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/headerLayout"
        android:layout_margin="10dp"
        android:text="CONNECT WITH US"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.schoofi.utils.CustomEditText
        android:id="@+id/editEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/textScreenTitle"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:hint="Email Address"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <com.schoofi.utils.CustomEditText
        android:id="@+id/editMessage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/editEmailAddress"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:hint="Message"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <com.schoofi.utils.CustomButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/editMessage"
        android:layout_margin="10dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>