<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activitiess.StudentAnnouncement" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back"/>

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_feedBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Health Status"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

        <com.schoofi.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Height: "
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:id="@+id/text_height"
            android:layout_margin="10dp"
            android:layout_weight="0.5"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Weight: "
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:id="@+id/text_weight"
                android:layout_margin="10dp"
                android:layout_weight="0.5"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Blood Group: "
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:id="@+id/text_blood_group"
                android:layout_margin="10dp"
                android:layout_weight="1"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Vision(L): "
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:id="@+id/text_visionL"
                android:layout_margin="10dp"
                android:layout_weight="1"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Vision(R): "
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:id="@+id/text_visionR"
                android:layout_margin="10dp"
                android:layout_weight="1"/>

            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.schoofi.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dental Hygiene: "
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:id="@+id/text_dentalHygiene"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
