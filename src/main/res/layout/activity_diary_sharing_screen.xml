<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:weightSum="1">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/linear_above"
            android:background="@color/white"
            android:layout_alignWithParentIfMissing="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/imageView_school_logo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"

                />

            <com.schoofi.utils.CustomTextViewRobotto
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_url"
                android:text="description"
                android:textSize="15sp"
                android:textColor="@color/graay"

                android:layout_below="@+id/imageView_school_logo"
                android:maxLines="2"
                android:gravity="center"
                android:textStyle="bold"
                />

            <View
                android:layout_width="120dp"
                android:layout_height="1.2dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/view"
                android:layout_below="@+id/text_view_url"
                android:background="@color/gray"></View>

            </RelativeLayout>









            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/relative_layout"
                android:layout_weight="0.80"
                android:gravity="center"
                android:background="@color/white"

                >

















                <com.schoofi.utils.CustomTextViewRobotto
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Title"
                    android:textSize="25sp"
                    android:layout_below="@+id/view"
                    android:textColor="@android:color/black"
                    android:id="@+id/text_view_title"
                    android:gravity="center"
                    android:textStyle="bold"
                    />





                <RatingBar
                    android:theme="@style/RatingBar1"
                    android:rating="3"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:id="@+id/star_rating"
                    android:layout_width="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/text_view_title"
                    android:layout_gravity="center"
                    android:foregroundGravity="center_horizontal"
                    android:layout_height="wrap_content"
                     />

                <com.schoofi.utils.CustomTextViewRobotto
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_descrption"
                    android:text="description"
                    android:textSize="15sp"
                    android:textColor="#696969"
                    android:layout_marginTop="20dp"

                    android:layout_below="@+id/star_rating"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    />








            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="0.13">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#f3f3f3"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:id="@+id/google_play_icon"
                        android:src="@drawable/googleplaylogo"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:id="@+id/app_store_icon"
                        android:src="@drawable/applelogo"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.5"></LinearLayout>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:id="@+id/schoofi_below_layout"
                        android:src="@drawable/schoofiblaclogo"/>






                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#EE4749"
                android:layout_weight="0.07"
                android:orientation="horizontal"
                android:weightSum="3" >

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:src="@drawable/ic_action_back"/>

                <com.schoofi.utils.CustomTextView
                    android:id="@+id/txt_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.3"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#D7D7D7"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:src="@drawable/uploadicon"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
