<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activities.TeacherHomeScreen" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Form"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/txt_teacherLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:gravity="center" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerSchoolList"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/headerLayout"
        android:layout_margin="10dp"
        android:background="@drawable/arrowdown" />

    <Spinner
        android:id="@+id/spinnerAuditPersonList"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/spinnerSchoolList"
        android:layout_margin="10dp"
        android:background="@drawable/arrowdown" />

    <Spinner
        android:id="@+id/spinnerAuditTaskList"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/spinnerAuditPersonList"
        android:layout_margin="10dp"
        android:background="@drawable/arrowdown" />

    <Spinner
        android:id="@+id/spinnerAuditSubTaskList"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/spinnerAuditTaskList"
        android:layout_margin="10dp"
        android:background="@drawable/arrowdown" />

    <com.schoofi.utils.CustomButton
        android:id="@+id/btn_addAudit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/buttons"
        android:gravity="center"
        android:padding="10dp"
        android:text="Add"
        android:textColor="@android:color/white"
        android:textAllCaps="false" />

</RelativeLayout>