<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back"/>

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_newLeave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text="Details"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Visitor Name"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/text_visitor_name"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Visitor Type"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/text_visitor_type"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Visitor Ward Name"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/text_visitor_ward_name"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Visitor Ward Class"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/text_visitor_ward_class"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Visitor Person"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/text_visitor_person"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Visitor Purpose"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/text_visitor_purpose"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Entry Time"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/text_visitor_entry"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="5dp"
            android:background="@drawable/divider"></View>

        <com.schoofi.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"

            android:text="More Details"
            android:textColor="@android:color/black"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="5dp"
            android:background="@drawable/divider"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/text_visitor_address1"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:text="Address: "
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/text_visitor_address"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/text_visitor_accessorie1"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:text="Accessories: "
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_visitor_accessories"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <com.schoofi.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/text_visitor_vehicle1"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:text="Vehicle: "
                android:textColor="@color/black"/>

            <com.schoofi.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_visitor_vehicle"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/red"/>



        </LinearLayout>









    </LinearLayout>

    </ScrollView>

    </RelativeLayout>