<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"

    android:weightSum="3" >

    <com.schoofi.utils.CustomTextView
        android:id="@+id/text_s_no"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="left"

        android:layout_weight="0.5"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="21-10-2015"
        android:textSize="15sp" />
    <View
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#DCDBDB"
        android:layout_weight="0.0045"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_weight="1.8">

    <com.schoofi.utils.CustomTextView
        android:id="@+id/text_student_descriptive_indicators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="21-10-2015"
        android:textSize="15sp" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/text_student_descriptive_indicators_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:text="21-10-2015"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#DCDBDB"
        android:layout_weight="0.0045"
        />

    <com.schoofi.utils.CustomTextView
        android:id="@+id/text_student_descriptive_indicators_grade"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="21-10-2015"
        android:textSize="15sp" />

</LinearLayout>
