<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activities.TeacherHomeScreen" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_gone"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_school_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="School List"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <com.schoofi.utils.CustomButton
            android:id="@+id/btn_Logout"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Logout"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>



    <com.schoofi.utils.CustomButton
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/btn_enquiry"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:text="Admission Enquiry"
        android:textAllCaps="false"
        android:layout_below="@+id/headerLayout"
        android:layout_margin="10dp"
        android:background="@drawable/button"/>

    <com.schoofi.utils.CustomButton
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/btn_status"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:text="Check Status"
        android:textAllCaps="false"
        android:layout_below="@+id/btn_enquiry"
        android:layout_margin="10dp"
        android:background="@drawable/button"/>

</RelativeLayout>
