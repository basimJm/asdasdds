<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activitiess.MarkYourLocation" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back" />

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:gravity="center"
            android:text=""
            android:textColor="#D7D7D7"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/headerLayout">


        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_classws"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Your Current Bus Pickup Point"
            android:textColor="@color/black"
            android:textSize="20sp" />



        <com.schoofi.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/button"
            android:layout_margin="15sp"
            android:id="@+id/text_address"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="#dedede">

            <com.schoofi.utils.CustomTextView
                android:id="@+id/txt_lattitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.schoofi.utils.CustomTextView
                android:id="@+id/txt_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear_botom">


    <com.schoofi.utils.CustomButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/buttons"
        android:text="Change Pickup Location"
        android:textAllCaps="false"
        android:id="@+id/btn_done"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"

        android:layout_margin="10dp"/>

        <com.schoofi.utils.CustomButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/buttons"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:id="@+id/btn_edit_profile"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"

            android:layout_margin="10dp"/>

    </LinearLayout>


</RelativeLayout>