<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoofi.activities.TeacherHomeScreen">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EE4749"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_action_back"/>

        <com.schoofi.utils.CustomTextView
            android:id="@+id/txt_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.2"
            android:gravity="center"
            android:text="Analysis"
            android:layout_marginLeft="20dp"
            android:textColor="#D7D7D7"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_calender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:tint="@color/white"
            android:src="@drawable/calander_icon" />

        <ImageView
            android:id="@+id/img_calender1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:tint="@color/white"
            android:src="@drawable/calander_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/headerLayout"
        android:id="@+id/linear_tab"
        android:background="@color/appgrey"
        >



        <com.schoofi.utils.CustomTextView
            android:id="@+id/text_date"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Department Name"
            android:layout_weight="0.24"
            android:layout_gravity="center"

            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:gravity="center"/>


        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#DCDBDB"
            android:layout_weight="0.0045"/>

        <com.schoofi.utils.CustomTextView
            android:id="@+id/text_in_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Present"
            android:layout_weight="0.24"
            android:layout_gravity="center"

            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:gravity="center"/>


        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#DCDBDB"
            android:layout_gravity="center"
            android:layout_weight="0.0045"/>

        <com.schoofi.utils.CustomTextView
            android:id="@+id/text_out_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Absent"
            android:layout_weight="0.24"
            android:layout_gravity="center"

            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:gravity="center"/>


        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#DCDBDB"
            android:layout_gravity="center"
            android:layout_weight="0.0045"/>

        <com.schoofi.utils.CustomTextView
            android:id="@+id/text_out_time1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Leave"
            android:layout_weight="0.24"
            android:layout_gravity="center"

            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:gravity="center"/>














    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linear_tab">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listview_teacher_directory"
            android:divider="@drawable/divider"
            android:dividerHeight="2dp"
            ></ListView>
    </LinearLayout>

</RelativeLayout>